@model IEnumerable<pet_store.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row row-cols-4">
    @foreach (var item in Model)
    {
    <div class="col">
        <a class="products-index-wrapper" asp-action="Details" asp-route-id="@item.Id">
            <div class="text-center image-wrapper"> </div>
            <div class="name">@Html.DisplayFor(modelItem => item.Name)</div>
        </a>
    </div>
    }
</div>

