@model pet_store.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-8 col-sm-8 col-md-6 col-lg-4 login-container">
        <h3 class="text-center">Add A New Product</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="Image" id="image_input" />
                <button class="btn btn-outline-info" id="upload_widget" type="button">Upload Image</button>
                <img id="image_preview" />
            </div>
            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="text-center">
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="~/js/image-upload.js" type="text/javascript"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
