@model IEnumerable<pet_store.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="title">
    <div style="text-align:center">

        <canvas id="myCanvas" width="400" height="100"
                style="border:1px solid #FFFFFF;">
            Your browser does not support the canvas element.
        </canvas>
    </div>
</div>

<h1>All Products</h1>

@if (Context != null && Context.User.Identity.IsAuthenticated && Context.User.IsInRole(nameof(UserType.Supplier)))
{
    <p>
        Supplier? <a asp-action="Create">Add a product</a>.
    </p>
}
<form asp-action="Search">
    <input class="form-control col-sm-6 m-1" name="searchString" id="inpSearch" placeholder="Search a product..."/>
    <div class="row">
        <select class="form-control col-sm-2 m-1" name="productCategory" id="inpCategory" asp-items="@new SelectList(Model.Select(x=>x.Category.Name).Distinct())">
            <option value="">By category...</option>
        </select>
        <select class="form-control col-sm-2 m-1" name="productCompany" id="inpCompany" asp-items="@new SelectList(Model.Select(x=>x.Company).Distinct())">
            <option value="">By company...</option>
        </select>
    </div>
    <button class="btnSearch btn btn-primary" type="button">Search</button>
</form>
<div class="row row-cols-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <a class="products-index-wrapper" asp-action="Details" asp-route-id="@item.Id">
                <div class="text-center image-wrapper">
                    <img src="@item.Image" />
                </div>
                <div class="name mt-2"><b>@Html.DisplayFor(modelItem => item.Company)</b> @Html.DisplayFor(modelItem => item.Name)</div>
                <div class="price mt-3">@Html.DisplayFor(modelItem => item.Price)$</div>
            </a>
        </div>
    }
</div>


<script type="text/template" id="template">
    <tr>
        <td>
            ${name}
        </td>
        <td>
            ${company}
        </td>
        <td>
            ${price}
        </td>
        <td>
            ${category.name}
        </td>
        <td>
            <a href="/Products/Edit/${id}">Edit</a> |
            <a href="/Products/Details/${id}">Details</a> |
            <a href="/Products/Delete/${id}">Delete</a>
        </td>
    </tr>
</script>

@section Scripts {
    <script src="~/js/ProductCanvas.js"></script>
    <script src="~/js/search.js"></script>
}
