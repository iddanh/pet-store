@model pet_store.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User?.FullName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Products)
            {
                <div class="col mb-2">
                    <a class="products-index-wrapper" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                        <div class="text-center image-wrapper">
                            <img src="@item.Image" />
                        </div>
                        <div class="name mt-2"><b>@Html.DisplayFor(modelItem => item.Company)</b> @Html.DisplayFor(modelItem => item.Name)</div>
                        <div class="price mt-3">@Html.DisplayFor(modelItem => item.Price)$</div>
                    </a>
                </div>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Context.User.IsInRole(nameof(UserType.Admin)))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
